<theme>

   <!--
   ///
   Variables
   ///
   -->
   <colorScheme name="Colorful,Colorful-Dark,Colorful-Light,OLED,Dark,Light,RetroBright,DMG">
      <variables>
         <allowSystemVideo>true</allowSystemVideo>
      </variables>
   </colorScheme>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <image name="system-video-vignette">
         <path>~/ES-DE/themes/colorful-simplified-es-de/theme-addons/colorful-simplified-es-de-addon_720p-system-video/images/vignette.svg</path>
         <zIndex>3</zIndex>
         <color>${backgroundColor}</color>
         <visible>${allowSystemVideo}</visible>
      </image>
      <video name="system-video">
         <imageType>none</imageType>
         <delay>2</delay>
         <path>~/ES-DE/themes/colorful-simplified-es-de/theme-addons/colorful-simplified-es-de-addon_720p-system-video/videos/${system.theme}.mp4</path>
         <fadeInType>transparent</fadeInType>
         <zIndex>2</zIndex>
         <visible>${allowSystemVideo}</visible>
      </video>
   </view>

   <!--
   ///
   Aspect Ratios
   ///
   -->
   <aspectRatio name="16:9">
      <view name="system">
         <image name="system-video-vignette">
            <origin>0.5 0.5</origin>
            <pos>0.70052083 0.5</pos><!-- 1345 50% -->
            <size>0 1</size>
         </image>
         <video name="system-video">
            <origin>0.5 0.5</origin>
            <pos>0.70052083 0.5</pos><!-- 1345 50% -->
            <size>0 1</size>
         </video>
      </view>
   </aspectRatio>
   <aspectRatio name="16:10">
      <view name="system">
         <image name="system-video-vignette">
            <origin>0.5 0.5</origin>
            <pos>0.70833333 0.5</pos><!-- 1224 50% -->
            <size>0 1</size>
         </image>
         <video name="system-video">
            <origin>0.5 0.5</origin>
            <pos>0.70833333 0.5</pos><!-- 1224 50% -->
            <size>0 1</size>
         </video>
      </view>
   </aspectRatio>

</theme>