<theme>

   <!--
   ///
   Variables
   ///
   -->
   <colorScheme name="Colorful">
      <variables>
         <allowSystemVideo>true</allowSystemVideo>
      </variables>
   </colorScheme>
   <colorScheme name="Light">
      <variables>
         <allowSystemVideo>false</allowSystemVideo>
      </variables>
   </colorScheme>
   <colorScheme name="RetroBright">
      <variables>
         <allowSystemVideo>false</allowSystemVideo>
      </variables>
   </colorScheme>
   <colorScheme name="DMG">
      <variables>
         <allowSystemVideo>false</allowSystemVideo>
      </variables>
   </colorScheme>
   <colorScheme name="Dark">
      <variables>
         <allowSystemVideo>false</allowSystemVideo>
      </variables>
   </colorScheme>
   <colorScheme name="OLED">
      <variables>
         <allowSystemVideo>false</allowSystemVideo>
      </variables>
   </colorScheme>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <image name="system-video-vignette">
         <path>~/ES-DE/themes/colorful-simplified-es-de/theme-addons/colorful-simplified-es-de-addon_720p-system-video/images/vignette.svg</path>
         <zIndex>5</zIndex>
         <color>${systemBackgroundColor}</color>
      </image>
      <video name="system-video">
         <imageType>none</imageType>
         <delay>2</delay>
         <path>~/ES-DE/themes/colorful-simplified-es-de/theme-addons/colorful-simplified-es-de-addon_720p-system-video/videos/${system.theme}.mp4</path>
         <fadeInType>transparent</fadeInType>
         <zIndex>4</zIndex>
         <visible>${allowSystemVideo}</visible>
      </video>
   </view>

   <!--
   ///
   Aspect Ratios
   ///
   -->
   <aspectRatio name="16:9">
      <view name="system">
         <image name="system-video-vignette">
            <origin>0.5 0.5</origin>
            <pos>0.6875 0.459259259259259</pos><!-- 1320 496 -->
            <size>1 1</size>
         </image>
         <video name="system-video">
            <origin>0.5 0.5</origin>
            <pos>0.6875 0.459259259259259</pos><!-- 1320 496 -->
            <size>1 1</size>
         </video>
      </view>
   </aspectRatio>
   <aspectRatio name="4:3">
      <view name="system">
         <video name="system-video">
            <origin>0.5 0</origin>
            <pos>0.5 -0.05</pos><!-- 50% 50% -->
            <size>0 0.9</size>
         </video>
      </view>
   </aspectRatio>

</theme>